{
  "name": "vega",
  "version": "2.0.0",
  "license": "MIT",
  "author": "toshusai",
  "description": "Browser-based video editing software.",
  "keywords": [
    "video editor",
    "nuxt",
    "ffmpeg"
  ],
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint --ext .vue,.ts src/",

    "dev:nuxt": "nuxt dev",
    "build:nuxt": "nuxt build",
    "start:nuxt": "nuxt start",
    "generate:nuxt": "nuxt generate",
    "preview:nuxt": "nuxt preview",

    "dev:electron": "yarn tsc:electron && NODE_ENV='development' electron .",
    "build:electron": "tsc -p ./src/main/tsconfig.json",

    "build-all": "yarn build:nuxt && yarn build:electron && electron-builder"
  },
  "build": {
    "appId": "com.toshusai.vega",
    "asar": true,
    "directories": {
      "output": "build/"
    },
    "mac": {
      "target": {
        "target": "default",
        "arch": [
          "arm64"
        ]
      }
    }
  },
  "devDependencies": {
    "@nuxtjs/eslint-config-typescript": "^10.0.0",
    "@nuxtjs/eslint-module": "^3.0.2",
    "@types/stats.js": "^0.17.0",
    "@types/three": "^0.139.0",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "electron": "^20.1.0",
    "electron-builder": "^23.3.3",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-nuxt": "^3.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^9.0.1",
    "nuxt": "^3.0.0-rc.6",
    "postcss-custom-properties": "^12.1.7",
    "prettier": "^2.5.1",
    "typescript": "^4.7.2",
    "typescript-eslint": "^0.0.1-alpha.0",
    "vite-plugin-eslint": "^1.6.1"
  },
  "dependencies": {
    "@ckpack/vue-color": "^1.1.9",
    "@mdi/js": "^7.0.96",
    "electron-devtools-installer": "^3.2.0",
    "install": "^0.13.0",
    "npm": "^8.17.0",
    "short-uuid": "^4.2.0",
    "stats.js": "^0.17.0",
    "three": "^0.139.2"
  }
}
